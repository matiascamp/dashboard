generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model MonthlySummary {
  id      Int   @id @default(autoincrement())
  month   Int // Mes en número (1-12)
  year    Int
  debit   Float @default(0)
  havings Float @default(0)

  details Detail[] // Relación con los movimientos
}

model Detail {
  id          Int      @id @default(autoincrement())
  amount      Float
  description String
  date        DateTime
  name        String

  monthlySummaryId Int
  monthlySummary   MonthlySummary @relation(fields: [monthlySummaryId], references: [id])
}

model Budgets {
  id          Int      @id @default(autoincrement())
  createdDate DateTime
  clientName  String
  pdfUrl      String
}
