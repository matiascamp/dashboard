generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MonthlySummary {
  id        Int               @id @default(autoincrement())
  fecha     DateTime
  debe      Float
  haber     Float
  detalles  MovementDetail[]  // relaci√≥n 1:N
}

model MovementDetail {
  id             Int            @id @default(autoincrement())
  monto          Float
  descripcion    String
  fecha          DateTime
  nombre         String
  resumenId      Int
  resumen        MonthlySummary @relation(fields: [resumenId], references: [id], onDelete: Cascade)
}
