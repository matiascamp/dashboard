

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model MonthlySummary {
  id      Int   @id @default(autoincrement())
  month   Int 
  year    Int
  debit   Float @default(0)
  havings Float @default(0)

  details MovementDetail[] 
}

model MovementDetail {
  id          Int      @id @default(autoincrement())
  amount      Float
  description String
  date        DateTime
  name        String
  type        String
  monthlySummaryId Int
  monthlySummary   MonthlySummary @relation(fields: [monthlySummaryId], references: [id])
}

model Budgets {
  id          Int      @id @default(autoincrement())
  createdDate DateTime
  clientName  String
  pdfUrl      String
}

model User {
  id           String  @id @default(cuid())
  email        String  @unique
  passwordHash String
  role         String 
}
